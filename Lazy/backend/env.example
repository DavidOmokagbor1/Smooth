# Lazy Backend Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL)
# Format: postgresql+asyncpg://user:password@localhost:5432/lazy_db
# For local development, you can use SQLite for testing:
# DATABASE_URL=sqlite+aiosqlite:///./lazy.db
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/lazy_db

# AI Service API Keys
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
# HUME_API_KEY=your_hume_api_key_here  # For emotion detection (future)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here  # For routing (future)

